            android:layout_height="16.0dip"
            android:src="@drawable/ic_movement" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@id/container"
        android:background="@drawable/joystick"
        android:layout_width="130.0dip"
        android:layout_height="130.0dip">
