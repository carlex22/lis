<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@color/background"
    android:padding="20.0dip"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@id/header_img"
        android:layout_width="64.0dip"
        android:layout_height="64.0dip"
        android:layout_marginTop="20.0dip"
        android:src="@drawable/ic_near_me_header"
        android:layout_centerHorizontal="true" />
    <TextView
        android:textAppearance="?android:textAppearanceLarge"
        android:textSize="30.0sp"
        android:textStyle="bold"
        android:textColor="@color/uicolor_text_high"
        android:gravity="center"
        android:id="@id/header_updates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:text="@string/mock_locations"
        android:layout_below="@id/header_img"
        android:layout_centerHorizontal="true" />
    <TextView
        android:textSize="16.0sp"
        android:textColor="@color/uicolor_text_medium"
        android:id="@id/summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:text="@string/give_mock_lock_permission"
        android:layout_below="@id/header_updates"
        android:layout_centerHorizontal="true" />
    <TextView
        android:textSize="16.0sp"
        android:textColor="@color/uicolor_text_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:text="@string/find_and_select_app"
        android:layout_below="@id/summary"
        android:layout_centerHorizontal="true" />
    <com.google.android.material.button.MaterialButton
        android:textColor="@color/material_button_text_color"
        android:id="@id/btn_continue"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/istyle_button_above_text"
        android:text="@string/open_developer_settings"
        android:layout_above="@id/ignore"
        android:textAllCaps="false"
        app:backgroundTint="@color/primaryColor"
        style="@style/Widget.Material3.Button" />
    <TextView
        android:textStyle="bold"
        android:textColor="@color/secondaryColor"
        android:id="@id/ignore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dont_enable_ml"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>